  keywords = {Animals,Circadian Clocks,Humans,Light,Rod Opsins,Retinal Cone Photoreceptor Cells,Retinal Rod Photoreceptor Cells},
  author = {Lucas, Robert J. and Lall, Gurprit S. and Allen, Annette E. and Brown, Timothy M.},
