  journaltitle = {The Journal of Neuroscience: The Official Journal of the Society for Neuroscience},
  shortjournal = {J. Neurosci.},
  date = {1981-08},
  pages = {876-886},
  keywords = {Animals,Sleep,Behavior; Animal,Male,Neurons,Rats,Norepinephrine,Electromyography,Locus Coeruleus},
  author = {Aston-Jones, G. and Bloom, F. E.},
  eprinttype = {pmid},
