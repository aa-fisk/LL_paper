  pages = {298-302},
  keywords = {Animals,Circadian Rhythm,Male,Suprachiasmatic Nucleus,Photoperiod,Mice,Disease Models; Animal,Jet Lag Syndrome,Food,Chronic Disease,Disease Progression,Neoplasms; Experimental},
