  shortjournal = {J. Biol. Rhythms},
  date = {2012-08},
  pages = {319-327},
  keywords = {Animals,Circadian Rhythm,Light,Male,Photoperiod,Maze Learning,Motor Activity,Neurons,Corticosterone,Dendrites,Cognition,Analysis of Variance,Swimming,Food Preferences,Dentate Gyrus,CA1 Region; Hippocampal,CA3 Region; Hippocampal,Depressive Disorder,Murinae},
