  journaltitle = {Current Environmental Health Reports},
  shortjournal = {Curr Environ Health Rep},
  date = {2017-09},
  pages = {325-339},
  keywords = {Circadian Rhythm,Humans,Melatonin,Female,Circadian disruption,Risk Factors,Work Schedule Tolerance,Shift work,Breast Neoplasms,Shift Work Schedule,Breast cancer,Light-at-night},
