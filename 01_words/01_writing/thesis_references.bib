  journaltitle = {Journal of Biological Rhythms},
  shortjournal = {J. Biol. Rhythms},
  date = {2011-04},
  pages = {149-159},
  keywords = {Aging,Animals,Circadian Rhythm,Sleep,Circadian Clocks,Male,Wakefulness,Melatonin,Photoperiod,Sleep Deprivation,Macaca mulatta,Longitudinal Studies},
  author = {Zhdanova, I. V. and Masuda, K. and Quasarano-Kourkoulis, C. and Rosene, D. L. and Killiany, R. J. and Wang, S.},
  eprinttype = {pmid},
